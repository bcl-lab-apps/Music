<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/dnabg">

    <Button
        android:id="@+id/button_login23"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="Login 23andMe"
        android:background="#CCFFCC" />

    <Button
        android:id="@+id/button_loginfb"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_music"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Share on Facebbok" 
        android:background="#66FFCC"/>

    <Button
        android:id="@+id/button_music"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Play my music"
        android:background="#CCFFCC" />

</RelativeLayout>
