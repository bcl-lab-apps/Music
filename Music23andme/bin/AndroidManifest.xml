<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bcl.music23andme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.bcl.music23andme.MusicApp"
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bcl.music23andme.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bcl.music23andme.ErrorActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_error"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bcl.music23andme.WebViewActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_web_view"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bcl.music23andme.SharingActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:label="adfsd"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bcl.music23andme.ExportActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_export"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bcl.music23andme.MusicActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_welcome"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name="com.bcl.music23andme.SmartActivity"
            android:label="@string/title_activity_smart" >
        </activity>
    </application>

</manifest>